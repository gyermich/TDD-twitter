<%= form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <% @tweet.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <p>
    <div class="field">
      <%= f.label :author %> <br>
      <%= f.text_field :author %>
    </div>
  </p>
  <p>
    <div class="field">
     <%= f.label :body %> <br>
     <%= f.text_area :body %>
    </div>
  </p>
  <div class="button">
    <%= f.submit %>
  </div>
<% end %>

